<div class="posts-wrapper row">
  <% @posts.reverse_each do |post| %>
    <div class="post">
      <div class="post-head">
        <div class="name">
          Kevin Leahey
        </div>
      </div>
        <div class="image center-block">
          <%= image_tag post.image.url(:medium), class:'img-responsive' %>
        </div>
        <div class="caption">
          <%= post.caption %>
        </div>
    </div>
  <% end %>
</div>
